---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

---

<Layout title="Services - SP Consulting">
  <Navigation />
  
  <main class="pt-20">
    <section class="bg-primary text-white py-20">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Our Services</h1>
        <p class="text-xl">Comprehensive consulting solutions tailored to your needs.</p>
      </div>
    </section>

    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold mb-4">Product Management</h2>
            <p class="text-gray-600 mb-6">
              Strategic product development and lifecycle management to drive business growth.
            </p>
            <a href="/services/product-management" class="text-primary font-medium hover:underline">
              Learn more →
            </a>
          </div>

          <div class="bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold mb-4">Program Management</h2>
            <p class="text-gray-600 mb-6">
              Efficient program execution and delivery to achieve your business objectives.
            </p>
            <a href="/services/program-management" class="text-primary font-medium hover:underline">
              Learn more →
            </a>
          </div>

          <div class="bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold mb-4">Engineering Services</h2>
            <p class="text-gray-600 mb-6">
              Technical expertise and innovative solutions for complex engineering challenges.
            </p>
            <a href="/services/engineering" class="text-primary font-medium hover:underline">
              Learn more →
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>