---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Services - SP Consulting">
  <Navigation />
  
  <main class="pt-20">
    <section class="bg-primary text-white py-20">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Our Services</h1>
        <p class="text-xl">Comprehensive consulting solutions tailored to your needs.</p>
      </div>
    </section>

    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Product Management Card -->
          <div class="bg-white p-8 rounded-lg shadow-lg transition-all duration-300 hover:scale-105 hover:shadow-xl">
            <div class="flex items-start gap-6 mb-6">
              <div class="bg-primary/10 p-3 rounded-lg">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
                </svg>
              </div>
              <h2 class="text-2xl font-bold">Product Management</h2>
            </div>
            <p class="text-gray-600 mb-6">
              Strategic product development and lifecycle management to drive business growth.
            </p>
            <a href="/services/product-management" class="inline-flex items-center text-primary font-medium hover:text-primary/80 transition-colors">
              Learn more
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>

          <!-- Program Management Card -->
          <div class="bg-white p-8 rounded-lg shadow-lg transition-all duration-300 hover:scale-105 hover:shadow-xl">
            <div class="flex items-start gap-6 mb-6">
              <div class="bg-primary/10 p-3 rounded-lg">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <h2 class="text-2xl font-bold">Program Management</h2>
            </div>
            <p class="text-gray-600 mb-6">
              Efficient program execution and delivery to achieve your business objectives.
            </p>
            <a href="/services/program-management" class="inline-flex items-center text-primary font-medium hover:text-primary/80 transition-colors">
              Learn more
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>

          <!-- Engineering Services Card -->
          <div class="bg-white p-8 rounded-lg shadow-lg transition-all duration-300 hover:scale-105 hover:shadow-xl">
            <div class="flex items-start gap-6 mb-6">
              <div class="bg-primary/10 p-3 rounded-lg">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
                </svg>
              </div>
              <h2 class="text-2xl font-bold">Engineering Services</h2>
            </div>
            <p class="text-gray-600 mb-6">
              Technical expertise and innovative solutions for complex engineering challenges.
            </p>
            <a href="/services/engineering" class="inline-flex items-center text-primary font-medium hover:text-primary/80 transition-colors">
              Learn more
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>