---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

// Features data structure
const features = [
  {
    title: "Thin & Flexible Design",
    description: "Ultra-thin profile (0.4mm - 1mm) with flexible construction that adapts to various form factors and shapes.",
    icon: `<svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5v4m0 0h-4m4 0l-5-5"></path></svg>`
  },
  {
    title: "Environmentally Safe",
    description: "Non-toxic, non-flammable, and non-explosive materials using Zinc Manganese technology for sustainable power solutions.",
    icon: `<svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>`
  },
  {
    title: "Cost-Effective Solution",
    description: "Competitive pricing through efficient manufacturing and readily available materials.",
    icon: `<svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`
  },
  {
    title: "Seamless Integration",
    description: "Direct integration onto substrates with other electronic components, eliminating complex wiring needs.",
    icon: `<svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14v6m-3-3h6M6 10h2a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2zm10 0h2a2 2 0 002-2V6a2 2 0 00-2-2h-2a2 2 0 00-2 2v2a2 2 0 002 2zM6 20h2a2 2 0 002-2v-2a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2z"></path></svg>`
  }
];

// BLE Label Specifications
const bleSpecs = {
  dimensions: "3\" x 3\"",
  capacity: "15 mAh",
  peakCurrent: "300 µA",
  energy: "15 mWh @ 100 µA",
  internalResistance: "< 15 Ω (DC at 20mA)",
  selfDischarge: "10% p.a.",
  operatingVoltage: "1.5V - 3V",
  shelfLife: "10 – 12 months",
  operatingLife: "4 - 6 months",
  transmissionRate: "1x per 15 sec",
  readRange: "25 – 30 feet"
};
---

<Layout title="Smart Label Solutions - SP Consulting">
  <Navigation />
  
  <main class="pt-20">
    {/* Hero Section */}
    <section class="bg-primary text-white py-20">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Smart Label Solutions</h1>
        <p class="text-xl md:text-2xl max-w-3xl">
          Pioneering the future of smart labels through innovative printed electronics and environmentally friendly power solutions.
        </p>
      </div>
    </section>

    {/* Main Content */}
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="space-y-20">
          
          {/* Introduction Section */}
          <div class="text-center max-w-4xl mx-auto">
            <p class="text-xl text-gray-700 leading-relaxed">
              We specialize in developing and manufacturing advanced smart labels that combine printed electronics with thin, flexible printed batteries. Our innovative solutions power the future of tracking, monitoring, and smart packaging technologies while maintaining a commitment to environmental sustainability.
            </p>
            
            {/* Decorative Battery Image */}
            <div class="mt-8">
              <img
                src="/assets/green-battery.png"
                alt="Eco-friendly battery technology"
                class="h-24 mx-auto opacity-80"
                loading="lazy"
              />
            </div>
          </div>

          {/* Features Section */}
          <div>
            <h2 class="text-3xl font-bold mb-12 text-center">Core Technology Features</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
              <div>
                <img
                  src="/assets/label-features.png"
                  alt="Smart Label Features Diagram"
                  class="w-full rounded-lg shadow-md"
                  loading="lazy"
                />
              </div>
              <div class="space-y-8">
                {features.map(feature => (
                  <div class="flex items-start gap-4">
                    <div class="bg-primary/10 p-3 rounded-lg flex-shrink-0">
                      <Fragment set:html={feature.icon} />
                    </div>
                    <div>
                      <h3 class="text-xl font-semibold mb-2">{feature.title}</h3>
                      <p class="text-gray-600">{feature.description}</p>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>

          {/* Applications Section */}
          <div>
            <h2 class="text-3xl font-bold mb-12 text-center">Industry Applications</h2>
            <div class="max-w-4xl mx-auto">
              <img
                src="/assets/label-applications.png"
                alt="Smart Label Applications"
                class="w-full rounded-lg shadow-md"
                loading="lazy"
              />
            </div>
          </div>

          {/* BLE Label Section */}
          <div>
            <h2 class="text-3xl font-bold mb-12 text-center">Featured Product: BLE Smart Label</h2>
            <div class="bg-white p-8 rounded-lg shadow-md">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                <div>
                  <img
                    src="/assets/ble-label-printed.png"
                    alt="BLE Label with Printed Battery"
                    class="w-full rounded-lg shadow-sm"
                    loading="lazy"
                  />
                  <p class="text-sm text-center text-gray-500 mt-4">
                    Off-the-shelf BLE label with integrated printed battery
                  </p>
                </div>
                
                <div class="space-y-8">
                  <div>
                    <h3 class="text-2xl font-semibold mb-4">Technical Specifications</h3>
                    <div class="grid grid-cols-2 gap-4 text-sm">
                      {Object.entries(bleSpecs).map(([key, value]) => (
                        <div>
                          <dt class="font-medium text-gray-600">{key.replace(/([A-Z])/g, ' $1').trim()}:</dt>
                          <dd class="text-gray-800">{value}</dd>
                        </div>
                      ))}
                    </div>
                  </div>
                  
                  <div>
                    <h3 class="text-2xl font-semibold mb-4">Customization Options</h3>
                    <ul class="space-y-2 text-gray-600">
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-primary flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Higher battery capacities available based on requirements</span>
                      </li>
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-primary flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Off-the-shelf samples available for evaluation</span>
                      </li>
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-primary flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Custom development services with NRE costs for specialized requirements</span>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>

          {/* CTA Section */}
          <div class="text-center">
            <a
              href="/contact"
              class="inline-block bg-primary text-white px-8 py-4 rounded-lg font-medium hover:bg-primary/90 transition-colors text-lg"
            >
              Discuss Your Smart Label Needs
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>