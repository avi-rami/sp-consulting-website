---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

// Define the data for the key pillars - Icons removed here, will be added in the loop
const pillars = [
  {
    title: "Customer Focus",
    iconKey: "users", // Identifier for SVG mapping
    points: [
      "Customer personas development",
      "Customer segmentation research",
      "Target Customer definition",
      "User Stories development"
    ]
  },
  {
    title: "Business Goals Alignment",
    iconKey: "target", // Identifier for SVG mapping
    points: [
      "Business goals & growth strategy definition",
      "Objectives & growth drivers definition",
      "SMART goals & KPI definition"
    ]
  },
    {
    title: "Competitive Landscape",
    iconKey: "search", // Identifier for SVG mapping
    points: [
      "Competitive landscape analysis",
      "Market share goals development",
      "Key metric comparison analysis",
      "Product differentiation characteristics definition"
    ]
  },
  {
    title: "Product Vision & Strategy",
    iconKey: "rocket", // Identifier for SVG mapping
    points: [
      "Product business case & value proposition development",
      "MVP formulation",
      "High-level Market requirements",
      "Launch roadmap development"
    ]
  },
  {
    title: "Market Understanding",
    iconKey: "store", // Identifier for SVG mapping
    points: [
      "Market definition & analysis",
      "Market Sizing and Opportunity (TAM, SAM and SOM)",
      "Target Market recommendation",
      "Positioning strategy"
    ]
  }
];

// Simple SVG map (Replace paths with your actual icon data)
const iconSvgs = {
    users: `<svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>`,
    target: `<svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>`,
    search: `<svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>`,
    rocket: `<svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>`, // Using lightning as placeholder for rocket
    store: `<svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>` // Using bag as placeholder for store
};


// *** UPDATED: Define the Product Strategy & Management challenges ***
const challenges = [
  "Unclear product development strategy and future product plans.",
  "Challenges in establishing and defining the target market for products.",
  "Inadequate business case due diligence.",
  "Customer pain points not adequately identified or understood.",
  "Minimum Viable Product (MVP) requirements are ambiguous and poorly communicated.",
  "Disconnect between Product Management and Engineering regarding project objectives and implementation.",
  "Uncertainty in determining optimal pricing structure, leading to challenges in setting appropriate price points and undermining revenue generation and market standing."
];
---

<Layout title="Build Winning Product Strategies & Bring Them to Market - SP Consulting">
  <Navigation />

  <main class="pt-20">
    {/* Hero Section */}
    <section class="bg-primary text-white py-20">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Build Winning Product Strategies & Bring Them to Market</h1>
        <p class="text-xl">We partner with you to define, develop, and launch successful products.</p>
      </div>
    </section>

    {/* Main Content Section */}
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="space-y-16">

          {/* Approach Section */}
          <div>
            <h2 class="text-3xl font-bold mb-6 text-center">Our Approach to Product Success</h2>
            <p class="text-gray-600 mb-12 max-w-[54rem] mx-auto">
              Effective product management requires a holistic view. We help organizations navigate the complexities of product strategy, development, and market launch by focusing on key interconnected areas. Our experienced consultants work alongside your team to build robust processes, foster data-driven decisions, and accelerate your time-to-market.
            </p>

            {/* Diagram */}
            <div class="mb-12">
              <img
                src="/assets/product-management-diagram.png"
                alt="Product Management Core Areas Diagram"
                class="w-full max-w-3xl mx-auto rounded-lg"
                loading="lazy"
              />
              <p class="text-sm text-gray-500 mt-4 text-center">
                Our comprehensive framework considers all critical factors for product success.
              </p>
            </div>
          </div>

          {/* Key Pillars Section */}
          <div class="mt-16">
            <h2 class="text-3xl font-bold mb-10 text-center">Key Pillars of Our Product Strategy Framework</h2>
             <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
              {pillars.map(pillar => (
                <div class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm flex flex-col">
                  <div class="flex items-center mb-4">
                    {/* Icon Container */}
                    <div class="bg-primary/10 w-12 h-12 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                       <Fragment set:html={iconSvgs[pillar.iconKey]} />
                    </div>
                    <h3 class="text-xl font-semibold">{pillar.title}</h3>
                  </div>
                  <ul class="space-y-2 text-gray-600 list-disc list-inside pl-2">
                    {pillar.points.map(point => (
                      <li>{point}</li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>

          {/* *** UPDATED: Common Challenges Section *** */}
          <div class="mt-20">
             {/* *** UPDATED: Heading *** */}
            <h2 class="text-3xl font-bold mb-6 text-center">Addressing Key Product Strategy & Management Challenges</h2>
             {/* *** UPDATED: Intro paragraph *** */}
            <p class="text-gray-600 mb-8 text-center max-w-3xl mx-auto">
              Developing a winning product strategy often involves overcoming significant hurdles. Does your organization struggle with any of the following?
            </p>
            <div class="max-w-3xl mx-auto bg-white p-6 rounded-lg border border-gray-200 shadow-sm mb-8">
              {/* *** List now uses the NEW challenges array *** */}
              <ul class="space-y-3 text-gray-700 list-disc list-inside">
                {challenges.map(challenge => (
                  <li>{challenge}</li>
                ))}
              </ul>
            </div>
             {/* *** UPDATED: Outro paragraph *** */}
             <p class="text-gray-600 text-center max-w-3xl mx-auto">
              Our product management services provide clarity and structure, helping you define clear strategies, understand customer needs, build strong business cases, and ensure alignment across your teams.
            </p>
          </div>

          {/* Why Partner Section */}
          <div class="mt-20">
            <h2 class="text-3xl font-bold mb-10 text-center">Why Partner with SP Consulting?</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
               <div class="text-center p-6 bg-white rounded-lg border border-gray-200 shadow-sm">
                 <div class="bg-primary/10 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                   <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                 </div>
                 <h3 class="text-xl font-semibold mb-2">Proven Expertise</h3>
                 <p class="text-gray-600">Years of experience driving product success and navigating complex launches across diverse industries.</p>
               </div>
               <div class="text-center p-6 bg-white rounded-lg border border-gray-200 shadow-sm">
                 <div class="bg-primary/10 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                   <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" /></svg>
                 </div>
                 <h3 class="text-xl font-semibold mb-2">Tailored Approach</h3>
                 <p class="text-gray-600">Customized product strategies and program solutions that fit your unique market context and goals.</p>
               </div>
               <div class="text-center p-6 bg-white rounded-lg border border-gray-200 shadow-sm">
                 <div class="bg-primary/10 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                   <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                 </div>
                 <h3 class="text-xl font-semibold mb-2">Results-Driven</h3>
                 <p class="text-gray-600">Focused on delivering tangible improvements, clear ROI, and measurable product success metrics.</p>
              </div>
            </div>
          </div>

          {/* Call to Action Section */}
          <div class="text-center pt-12">
            <p class="text-lg text-gray-700 mb-6">Ready to elevate your product strategy and execution?</p>
            <a
              href="/contact"
              class="inline-block bg-primary text-white px-8 py-4 rounded-lg font-medium hover:bg-primary/90 transition-colors text-lg"
            >
              Discuss Your Product Challenges
            </a>
          </div>
        </div>
      </div>
    </section>

  </main>

  <Footer />
</Layout>