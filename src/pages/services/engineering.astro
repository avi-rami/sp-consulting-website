---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

// Define the data for the key services
const services = [
  {
    title: "PCB Design, Development and Manufacturing",
    iconKey: "pcb", // Identifier for SVG mapping
    color: "#254670",
    points: [
      "Full PCB Lifecycle: From design to validation.",
      "Advanced Layout: Using modern design and simulation tools.",
      "Reliable Manufacturing: Partnering with industry leaders.",
      "Custom Solutions: Tailored to your needs."
    ]
  },
  {
    title: "Firmware Development",
    iconKey: "firmware", // Identifier for SVG mapping
    color: "#faaa1e",
    points: [
      "Custom Embedded Software: Tailored to specific hardware.",
      "Optimized Performance: Maximizing hardware capabilities.",
      "System Reliability: Ensuring robust and stable operation.",
      "Complex Functionality: Delivering seamless operation in intricate systems."
    ]
  },
  {
    title: "Prototype Builds",
    iconKey: "prototype", // Identifier for SVG mapping
    color: "#6ea56d",
    points: [
      "Fast Prototyping: Quick conversion of designs to prototypes.",
      "Advanced Fabrication: Using modern technologies.",
      "Technical Validation: For rapid iteration.",
      "Accelerated Development: Shortening the path to production."
    ]
  }
];

// Simple SVG map for icons
const iconSvgs = {
    pcb: `<svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" /></svg>`,
    firmware: `<svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" /></svg>`,
    prototype: `<svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" /></svg>`
};
---

<Layout title="Engineering Services | Strategic Pathways">
  <Navigation />

  <main class="pt-16">
    {/* Hero Section */}
    <section class="bg-primary text-white py-16">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Engineering Services</h1>
        <p class="text-xl">Innovative engineering solutions for complex challenges.</p>
      </div>
    </section>

    {/* Main Content Section */}
    <section class="py-12 bg-gray-50">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="space-y-12">
          {/* Introductory Section */}
          <div>
            {/* <h2 class="text-3xl font-bold mb-6 text-center">Our Engineering Expertise</h2> */}
            <p class="text-lg text-gray-600 leading-relaxed mb-12 max-w-4xl mx-auto text-center">
              We combine technical excellence with innovative thinking to deliver cutting-edge engineering solutions that drive business success. Our comprehensive services span across multiple domains, ensuring your technical challenges are met with expertise and precision.
            </p>
          </div>

          {/* Services Section */}
          <div>
            <h2 class="text-3xl font-bold mb-10 text-center">Core Engineering Services</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
              {services.map(service => (
                <div class="p-6 rounded-lg border border-gray-200 shadow-sm flex flex-col" style={`background-color: ${service.color}10`}>
                  <div class="flex items-center mb-4">
                    {/* Icon Container */}
                    <div class="bg-primary/10 w-12 h-12 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                       <Fragment set:html={iconSvgs[service.iconKey]} />
                    </div>
                    <h3 class="text-xl font-semibold" style={`color: ${service.color}`}>{service.title}</h3>
                  </div>
                  <ul class="space-y-2 text-gray-600 list-disc ml-4">
                    {service.points.map(point => (
                      <li class="pl-1.5">
                        <span>{point}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>

          {/* Why Choose Us Section */}
          <div class="mt-16">
            <h2 class="text-3xl font-bold mb-10 text-center">Why Partner with Strategic Pathways for Engineering?</h2>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
               <div class="text-center p-6 bg-white rounded-lg border border-gray-200 shadow-sm">
                 <div class="bg-primary/10 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                   <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M6.343 18.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>
                 </div>
                 <h3 class="text-xl font-semibold mb-2">Technical Expertise</h3>
                 <p class="text-gray-600">Deep knowledge across PCB design, firmware development, and advanced prototyping techniques.</p>
               </div>
               <div class="text-center p-6 bg-white rounded-lg border border-gray-200 shadow-sm">
                 <div class="bg-primary/10 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                   <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.196-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path></svg>
                 </div>
                 <h3 class="text-xl font-semibold mb-2">Quality & Reliability</h3>
                 <p class="text-gray-600">Commitment to delivering robust, high-performance solutions through rigorous design and validation.</p>
               </div>
               <div class="text-center p-6 bg-white rounded-lg border border-gray-200 shadow-sm">
                 <div class="bg-primary/10 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                   <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                 </div>
                 <h3 class="text-xl font-semibold mb-2">Accelerated Development</h3>
                 <p class="text-gray-600">Streamlined processes and rapid prototyping capabilities to shorten your time-to-market.</p>
               </div>
               <div class="text-center p-6 bg-white rounded-lg border border-gray-200 shadow-sm">
                 <div class="bg-primary/10 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                   <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                 </div>
                 <h3 class="text-xl font-semibold mb-2">Cost-Effective Solutions</h3>
                 <p class="text-gray-600">Minimal organizational overhead with access to our network of cost-effective partners for design and development.</p>
               </div>
            </div>
          </div>

          {/* Call to Action Section */}
          <div class="text-center mt-12">
            <p class="text-lg text-gray-700 mb-6">Ready to tackle your next engineering challenge?</p>
            <a
              href="/contact"
              class="inline-block bg-primary text-white px-8 py-4 rounded-lg font-medium hover:bg-primary/90 transition-colors text-lg"
            >
              Discuss Your Engineering Needs
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>