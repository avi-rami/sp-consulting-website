    software: `<svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>`,
    delivery: `<svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>`,
    methodology: `<svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>`,
    governance: `<svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path></svg>`,
    risk: `<svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`
};
---

<Layout title="Product & Project Management Services | Strategic Pathways">
  <Navigation />

  <main class="pt-16">
    {/* Hero Section */}
    <section class="bg-primary text-white py-16">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Product & Project Management Services</h1>
        <p class="text-xl">Comprehensive solutions for product strategy and project execution excellence</p>
      </div>
    </section>

    <div class="bg-[#F9FAFB]">
      {/* Introduction Section */}
      <section class="py-12">
        <div class="container mx-auto px-4">
          <div class="max-w-4xl mx-auto text-center">
            <p class="text-lg text-gray-600 leading-relaxed">
              We offer integrated product and project management services that bridge the gap between strategy and execution. Our comprehensive approach combines product innovation with efficient delivery mechanisms, ensuring your initiatives not only meet market needs but are executed with precision and excellence. From product conceptualization to market launch, and from project initiation to successful delivery, we provide the expertise needed to drive sustainable growth and operational excellence.
            </p>
          </div>
        </div>
      </section>

      <section class="pb-12">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 max-w-7xl mx-auto px-4">
          {/* Product Management Column */}
          <div>
            <div class="text-center mb-10">
              <div class="bg-primary/10 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
                </svg>
              </div>
              <h2 class="text-3xl font-bold mb-2">Product Management</h2>
              <p class="text-gray-600">Strategic product development and market success</p>
            </div>
            <div class="space-y-4">
              {productPillars.map(pillar => (
                <div class="p-6 rounded-lg border border-gray-200 shadow-sm flex flex-col" style={`background-color: ${
                  pillar.title === "Product Vision & Strategy" ? "#cb781a10" :
                  pillar.title === "Customer Focus" ? "#c53f2a10" :
                  pillar.title === "Business Goals Alignment" ? "#42638910" :
                  pillar.title === "Market Understanding" ? "#4cc3eb10" :
                  pillar.title === "Competitive Landscape" ? "#b2892710" : "white"}`}>
                  <div class="flex items-start gap-4 mb-3">
                    <div class="bg-primary/5 p-2.5 rounded-lg flex-shrink-0">
                      <Fragment set:html={iconSvgs[pillar.iconKey]} />
                    </div>
                    <h3 class="text-xl font-semibold" style={`color: ${
                      pillar.title === "Product Vision & Strategy" ? "#cb781a" :
                      pillar.title === "Customer Focus" ? "#c53f2a" :
                      pillar.title === "Business Goals Alignment" ? "#426389" :
                      pillar.title === "Market Understanding" ? "#4cc3eb" :
                      pillar.title === "Competitive Landscape" ? "#b28927" : "inherit"}`}>{pillar.title}</h3>
                  </div>
                  <ul class="space-y-2 text-gray-600 list-disc ml-4 pl-2 text-base">
                    {pillar.points.map(point => (
                      <li class={point.trim() === "" ? "list-none h-6" : ""}>
                        <span>{point}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>

          {/* Project Management Column */}
          <div>
            <div class="text-center mb-10">
              <div class="bg-primary/10 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <h2 class="text-3xl font-bold mb-2">Project Management</h2>
              <p class="text-gray-600">Efficient execution and delivery excellence</p>
            </div>
            <div class="space-y-4">
              {projectPillars.map(pillar => (
                <div class="p-6 rounded-lg border border-gray-200 shadow-sm flex flex-col" style={`background-color: ${
                  pillar.title === "PMO Setup and Governance" ? "#41c6e110" :
                  pillar.title === "Methodology, Tools & Templates" ? "#f16b5510" :
                  pillar.title === "Project Delivery" ? "#6da46c10" :
                  pillar.title === "Business Readiness & Risk Management" ? "#faac2c10" :
                  pillar.title === "PM Software Deployment & Training" ? "#213b5c10" : "white"}`}>
                  <div class="flex items-start gap-4 mb-3">
                    <div class="bg-primary/5 p-2.5 rounded-lg flex-shrink-0">
                      <Fragment set:html={iconSvgs[pillar.iconKey]} />
                    </div>
                    <h3 class="text-xl font-semibold" style={`color: ${
                      pillar.title === "PMO Setup and Governance" ? "#41c6e1" :
                      pillar.title === "Methodology, Tools & Templates" ? "#f16b55" :
                      pillar.title === "Project Delivery" ? "#6da46c" :
                      pillar.title === "Business Readiness & Risk Management" ? "#faac2c" :
                      pillar.title === "PM Software Deployment & Training" ? "#213b5c" : "inherit"}`}>{pillar.title}</h3>
                  </div>
                  <ul class="space-y-2 text-gray-600 list-disc ml-4 pl-2 text-base">
                    {pillar.points.map(point => (
                      <li class={point.trim() === "" ? "list-none h-6" : ""}>
                        <span>{point}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>
        </div>
      </section>

      {/* Call to Action Section */}
      <section class="py-12">
        <div class="container mx-auto px-4">
          <div class="text-center">
            <p class="text-lg text-gray-700 mb-6">Ready to elevate your product strategy and project execution?</p>
            <a
              href="/contact"
              class="inline-block bg-primary text-white px-8 py-4 rounded-lg font-medium hover:bg-primary/90 transition-colors text-lg"
            >
              Discuss Your Needs
            </a>
          </div>
        </div>
      </section>
    </div>
  </main>

  <Footer />
</Layout> 