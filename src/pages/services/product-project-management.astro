---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

// Product Management Pillars - Reordered
const productPillars = [
  {
    title: "Product Vision & Strategy",
    iconKey: "rocket",
    points: [
      "Product business case & value proposition development",
      "MVP formulation",
      "High-level Market requirements",
      "Launch roadmap development"
    ]
  },
  {
    title: "Customer Focus",
    iconKey: "users",
    points: [
      "Customer personas development",
      "Customer segmentation research",
      "Target Customer definition",
      "User Stories development"
    ]
  },
  {
    title: "Business Goals Alignment",
    iconKey: "target",
    points: [
      "Business goals & growth strategy definition",
      "Objectives & growth drivers definition",
      "SMART goals & KPI definition"
    ]
  },
  {
    title: "Market Understanding",
    iconKey: "store",
    points: [
      "Market definition & analysis",
      "Market Sizing and Opportunity (TAM, SAM and SOM)",
      "Target Market recommendation",
      "Positioning strategy"
    ]
  },
  {
    title: "Competitive Landscape",
    iconKey: "search",
    points: [
      "Competitive landscape analysis",
      "Market share goals development",
      "Key metric comparison analysis",
      "Product differentiation characteristics definition"
    ]
  }
];

// Project Management Pillars - Reordered
const projectPillars = [
  {
    title: "PMO Setup and Governance",
    iconKey: "governance",
    points: [
      "Vision, purpose & scope definition",
      "Organization setup with RACI",
      "Operational budget & Success criteria development",
      "Process and policies governance setup"
    ]
  },
  {
    title: "Methodology, Tools & Templates",
    iconKey: "methodology",
    points: [
      "PMO Framework Definition (Agile, SAFe Agile, etc.)",
      "Tools and templates development & deployment",
      " "
    ]
  },
  {
    title: "Project Delivery",
    iconKey: "delivery",
    points: [
      "Project Planning â€“ inception to launch",
      "Portfolio Management",
      "Project Management (resource, budget, timeline, risk mitigation)"
    ]
  },
  {
    title: "Business Readiness & Risk Management",
    iconKey: "risk",
    points: [
      "Technology and Operational assessment",
      "Benchmark Analysis",
      "Risk assessment and mitigation plans",
      "Risk monitoring and control"
    ]
  },
  {
    title: "PM Software Deployment & Training",
    iconKey: "software",
    points: [
      "Business requirements definition",
      "Software Selection, Total Cost, ROI Analysis",
      "Detail design, configuration & deployment",
      "Software training & adoption",
      "Rollout and steady state support"
    ]
  }
];

// SVG icons map
