---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

// Logos for the scroller
const logos = [
  { src: "/assets/avery-dennison-seeklogo.svg", alt: "Avery Dennison" },
  { src: "/assets/brady-logo.png", alt: "Brady" },
  { src: "/assets/carefusion-seeklogo.png", alt: "CareFusion" },
  { src: "/assets/eSAT-logo.svg", alt: "eSAT" },
  { src: "/assets/house-of-design-logo.svg", alt: "House of Design" },
  { src: "/assets/linxens-logo.svg", alt: "Linxens" },
  { src: "/assets/Unique-Micro-Design-logo.svg", alt: "Unique Micro Design" },
  { src: "/assets/zebra-technologies-logo.svg", alt: "Zebra Technologies" }
];

// Placeholder Testimonials
const testimonials = [
    {
        quote: "Shailesh's project management expertise brought much-needed clarity and efficiency to our complex development cycle, significantly reducing our time-to-market.",
        name: "Ron Kyslinger",
        title: "Board of Directors, House of Design"
    },
    {
        quote: "The strategic guidance provided was instrumental in navigating a challenging market pivot. We achieved our key objectives faster than anticipated.",
        name: "George Linscott",
        title: "CEO Printed Energy"
    },
    {
        quote: "Thanks to Shailesh's expert product and program management, technical skills and his clear communication, we saw a marked improvement in project efficiency and customer engagement. He brought much-needed structure and alignment to our processes.",
        name: "Rick Somerton",
        title: "CEO eSAT Global"
    }
]
---

<Layout title="Home | Strategic Pathways">
  <Navigation />

  <main class="pt-16">
    {/* Hero Section (Background: Primary) */}
    <section class="bg-primary text-white py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">
            Accelerate Product Innovation & Market Leadership
          </h1>
          <p class="text-xl mb-8">
            Expert consulting in product & project management, engineering, and custom development
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="/services" class="bg-white text-primary px-6 py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors">
              Explore our Expertise
            </a>
            <a href="/contact" class="border-2 border-white text-white px-6 py-3 rounded-lg font-medium hover:bg-white hover:text-primary transition-colors">
              Schedule a Free Consultation
            </a>
          </div>
        </div>
      </div>
    </section>

    {/* Services Overview (Background: White) */}
    <section class="py-12 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-10">Our Services</h2>
        <p class="text-lg text-center text-gray-500 mb-8 max-w-3xl mx-auto">
          We empower your success through targeted expertise in the following areas:
        </p>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {/* Product & Project Management Card */}
          <div class="bg-white p-6 rounded-lg shadow-lg transition-transform transform hover:scale-105 border border-gray-100">
            <div class="flex flex-col">
              <div class="flex items-start gap-4 mb-4">
                <div class="bg-primary/10 p-3 rounded-lg flex-shrink-0">
                   <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/></svg>
                </div>
                <h3 class="text-xl font-semibold">Product & Project Management</h3>
              </div>
              <p class="text-gray-600 mb-4">Comprehensive strategy and execution for product lifecycle and project delivery, ensuring market success to drive revenue growth.</p>
              <a href="/services/product-project-management" class="text-primary font-medium hover:underline">Learn more →</a>
            </div>
          </div>

          {/* Engineering Services Card */}
          <div class="bg-white p-6 rounded-lg shadow-lg transition-transform transform hover:scale-105 border border-gray-100">
            <div class="flex flex-col">
              <div class="flex items-start gap-4 mb-4">
                <div class="bg-primary/10 p-3 rounded-lg flex-shrink-0">
                  <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/></svg>
                </div>
                <h3 class="text-xl font-semibold">Engineering Services</h3>
              </div>
              <p class="text-gray-600 mb-4">Technical expertise and innovative solutions for complex engineering challenges.</p>
              <a href="/services/engineering" class="text-primary font-medium hover:underline">Learn more →</a>
            </div>
          </div>

          {/* Custom Development Card */}
          <div class="bg-white p-6 rounded-lg shadow-lg transition-transform transform hover:scale-105 border border-gray-100">
            <div class="flex flex-col">
              <div class="flex items-start gap-4 mb-4">
                <div class="bg-primary/10 p-3 rounded-lg flex-shrink-0">
                  <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-5 5a2 2 0 01-2.828 0l-7-7A2 2 0 013 8V5a2 2 0 012-2h2z"/></svg>
                </div>
                <h3 class="text-xl font-semibold">Custom Development</h3>
              </div>
              <p class="text-gray-600 mb-4">Expertise in development of new technologies such as smart labels and innovative solutions.</p>
              <a href="/services/smart-label" class="text-primary font-medium hover:underline">Learn more →</a>
            </div>
          </div>

          {/* Training Card */}
          <div class="bg-white p-6 rounded-lg shadow-lg transition-transform transform hover:scale-105 border border-gray-100">
            <div class="flex flex-col">
              <div class="flex items-start gap-4 mb-4">
                <div class="bg-primary/10 p-3 rounded-lg flex-shrink-0">
                  <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>
                </div>
                <h3 class="text-xl font-semibold">Training Programs</h3>
              </div>
              <p class="text-gray-600 mb-4">Unlock Higher Performing Teams: Pragmatic Coaching for Product & Project Success.</p>
              <a href="/training" class="text-primary font-medium hover:underline">Learn more →</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* About Section (Background: Gray-50) */}
    <section class="py-12 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-8">About Strategic Pathways</h2>
          <p class="text-lg text-gray-600 mb-8 leading-relaxed">
             Strategic Pathways delivers competitive advantage through expert product management, project management, and engineering services. We help you launch groundbreaking products, manage complex portfolios, and execute strategic projects with unparalleled efficiency. With <strong class="text-primary font-semibold">30+ years of Fortune 500 experience</strong>, our dedicated experts transform ideas into market-defining realities, enabling organizations to achieve strategic goals and drive sustainable growth.
          </p>
          <div class="flex flex-wrap justify-center gap-4 mb-4">
            <a href="/our-leadership" class="bg-primary text-white px-6 py-3 rounded-lg font-medium hover:bg-primary/90 transition-colors">
              Meet Our Leadership
            </a>
            <a href="/why-us" class="border-2 border-primary text-primary px-6 py-3 rounded-lg font-medium hover:bg-primary hover:text-white transition-colors">
              Why Choose Us
            </a>
          </div>
        </div>
      </div>
    </section>

    {/* Testimonials Section (Background: White) */}
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-12">What Our Clients Say</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-7xl mx-auto">
                {testimonials.map((testimonial) => (
                    <div class="bg-white p-8 rounded-lg shadow-lg border border-gray-200">
                        <blockquote class="text-lg text-gray-700 italic border-l-4 border-primary pl-4 mb-6">
                            "{testimonial.quote}"
                        </blockquote>
                        <p class="text-right text-gray-600 font-medium">
                            - {testimonial.name}, <span class="block text-sm text-gray-500">{testimonial.title}</span>
                        </p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    {/* Trusted By / Client Logos Section (Background: Gray-50) */}
    <section class="py-12 bg-gray-50">
        <div class="container mx-auto px-4">
            <h2 class="text-2xl font-bold text-center text-gray-700 mb-8">Trusted By Industry Partners</h2>
             <div
                class="logo-scroller relative w-full overflow-hidden py-8"
                role="group"
                aria-label="Companies previously worked with or clients"
                style={{
                    maskImage: 'linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%)',
                    WebkitMaskImage: 'linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%)'
                }}
             >
                <div 
                    class="logo-track flex w-max animate-scroll space-x-20 pr-20" 
                    style={{ 
                        willChange: 'transform',
                        backfaceVisibility: 'hidden',
                        WebkitBackfaceVisibility: 'hidden',
                        transform: 'translate3d(0, 0, 0)',
                        WebkitTransform: 'translate3d(0, 0, 0)'
                    }}
                >
                {[...logos, ...logos].map((logo, index) => (
                    <div class="flex items-center justify-center flex-shrink-0 w-[200px] h-20" >
                      <img 
                        src={logo.src} 
                        alt={logo.alt} 
                        class="w-full h-full object-contain" 
                        loading="lazy" 
                        aria-hidden={index >= logos.length ? "true" : undefined}
                      />
                    </div>
                ))}
                </div>
            </div>
        </div>
    </section>

    {/* Call to Action */}
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <div class="bg-primary rounded-lg text-white p-12 text-center">
                <h2 class="text-3xl font-bold mb-4">Ready to Transform Your Business?</h2>
                <p class="text-xl mb-8 max-w-2xl mx-auto">
                    Contact us today to discuss how we can help you achieve your goals.
                </p>
                <a href="/contact" class="inline-block bg-white text-primary px-8 py-4 rounded-lg font-medium hover:bg-gray-100 transition-colors">
                    Get Started
                </a>
            </div>
        </div>
    </section>
  </main>

  <Footer />
</Layout>

{/* Logo scroll animation CSS */}
<style is:global>
  @keyframes scroll {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); }
  }
  .animate-scroll { animation: scroll 30s linear infinite; }
  @media (prefers-reduced-motion: reduce) { .animate-scroll { animation: none; } }
</style>