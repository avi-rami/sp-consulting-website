---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

// Logos for the scroller
const logos = [
  { src: "/assets/Amazon.svg", alt: "Amazon" },
  { src: "/assets/Mueller Water Products.svg", alt: "Mueller Water Products" },
  { src: "/assets/Newell Brands.svg", alt: "Newell Brands" },
  { src: "/assets/Stryker Corporation.svg", alt: "Stryker Medical" },
  { src: "/assets/daimler-chrysler.svg", alt: "DaimlerChrysler" },
  { src: "/assets/createmelogo.svg", alt: "CreateMe" }
];

// Placeholder Testimonials
const testimonials = [
    {
        quote: "Working with SP Consulting fundamentally shifted our product strategy, leading to a 25% increase in market share within a year. Their insights are invaluable.",
        name: "Jane Doe",
        title: "VP of Product, Tech Innovators Inc."
    },
    {
        quote: "Shailesh's program management expertise brought much-needed clarity and efficiency to our complex development cycle, significantly reducing our time-to-market.",
        name: "John Smith",
        title: "Director of Engineering, Global Solutions Ltd."
    },
     {
        quote: "The strategic guidance provided was instrumental in navigating a challenging market pivot. We achieved our key objectives faster than anticipated.",
        name: "Alex Johnson",
        title: "CEO, Startup Ventures Co."
    }
]
---

<Layout title="SP Consulting - Expert Product & Program Consulting">
  <Navigation />

  <main class="pt-20">
    {/* Hero Section (Background: Primary) */}
    <section class="bg-primary text-white py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">
            Accelerate Product Innovation & Market Leadership
          </h1>
          <p class="text-xl mb-8">
            Expert consulting in product management, program management, engineering services, and smart label solutions.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="/services" class="bg-white text-primary px-6 py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors">
              Explore our Expertise
            </a>
            <a href="/contact" class="border-2 border-white text-white px-6 py-3 rounded-lg font-medium hover:bg-white hover:text-primary transition-colors">
              Schedule a Free Consultation
            </a>
          </div>
        </div>
      </div>
    </section>

    {/* Services Overview (Background: White) */}
    <section class="py-20 bg-white"> {/* Explicitly set bg-white */}
      <div class="container mx-auto px-4">
        {/* CHANGE: Added intro sentence */}
        <p class="text-lg text-center text-gray-600 mb-4 max-w-3xl mx-auto">
            We empower your success through targeted expertise in the following areas:
        </p>
        {/* CHANGE: Increased bottom margin for heading */}
        <h2 class="text-3xl font-bold text-center mb-16">Our Services</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {/* Service Cards remain the same structure... */}
          {/* Product Management Card */}
          <div class="bg-white p-6 rounded-lg shadow-lg transition-transform transform hover:scale-105 border border-gray-100"> {/* Added subtle border */}
            <div class="flex items-start gap-4">
              <div class="bg-primary/10 p-3 rounded-lg flex-shrink-0">
                 <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/></svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold mb-4">Product Management</h3>
                <p class="text-gray-600 mb-4">Drive growth with strategic product development and lifecycle management.</p>
                <a href="/services/product-management" class="text-primary font-medium hover:underline">Learn more →</a>
              </div>
            </div>
          </div>
          {/* Program Management Card */}
           <div class="bg-white p-6 rounded-lg shadow-lg transition-transform transform hover:scale-105 border border-gray-100">
            <div class="flex items-start gap-4">
              <div class="bg-primary/10 p-3 rounded-lg flex-shrink-0">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold mb-4">Program Management</h3>
                <p class="text-gray-600 mb-4">Achieve objectives faster with efficient program execution and delivery.</p>
                <a href="/services/program-management" class="text-primary font-medium hover:underline">Learn more →</a>
              </div>
            </div>
          </div>
          {/* Engineering Services Card */}
          <div class="bg-white p-6 rounded-lg shadow-lg transition-transform transform hover:scale-105 border border-gray-100">
            <div class="flex items-start gap-4">
              <div class="bg-primary/10 p-3 rounded-lg flex-shrink-0">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/></svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold mb-4">Engineering Services</h3>
                <p class="text-gray-600 mb-4">Technical expertise and innovative solutions for complex engineering challenges.</p>
                <a href="/services/engineering" class="text-primary font-medium hover:underline">Learn more →</a>
              </div>
            </div>
          </div>
          {/* Smart Label Solutions Card */}
          <div class="bg-white p-6 rounded-lg shadow-lg transition-transform transform hover:scale-105 border border-gray-100">
            <div class="flex items-start gap-4">
              <div class="bg-primary/10 p-3 rounded-lg flex-shrink-0">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-5 5a2 2 0 01-2.828 0l-7-7A2 2 0 013 8V5a2 2 0 012-2h2z"></path></svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold mb-4">Smart Label Solutions</h3>
                <p class="text-gray-600 mb-4">Innovative smart label development integrating technology for enhanced results.</p>
                <a href="/services/smart-label-solutions" class="text-primary font-medium hover:underline">Learn more →</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Trusted By / Client Logos Section (Background: Gray-50) */}
    {/* CHANGE: Added background bg-gray-50 */}
    <section class="py-16 bg-gray-50">
        <div class="container mx-auto px-4">
            {/* CHANGE: Increased bottom margin */}
            <h2 class="text-2xl font-bold text-center text-gray-700 mb-12">Trusted By Industry Leaders</h2>
             <div
                class="logo-scroller relative w-full overflow-hidden py-4"
                role="group"
                aria-label="Companies previously worked with or clients"
                style={{
                maskImage: 'linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%)',
                WebkitMaskImage: 'linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%)'
                }}
             >
                <div class="logo-track flex w-max animate-scroll space-x-16 pr-16">
                {[...logos, ...logos].map((logo, index) => (
                    <div class="flex items-center justify-center flex-shrink-0" >
                      <img src={logo.src} alt={logo.alt} class="h-10 max-w-[160px] object-contain" loading="lazy" aria-hidden={index >= logos.length ? "true" : undefined} height="40"/>
                    </div>
                ))}
                </div>
            </div>
        </div>
    </section>

    {/* About Section (Background: White) */}
    {/* CHANGE: Changed background to bg-white */}
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
          {/* CHANGE: Increased bottom margin */}
          <h2 class="text-3xl font-bold mb-10">About SP Consulting</h2>
          <p class="text-lg text-gray-600 mb-10 leading-relaxed"> {/* Added leading-relaxed */}
             SP Consulting delivers competitive advantage through expert product management, program management, engineering services, and smart label solutions. We help you launch groundbreaking products, manage complex portfolios, and execute strategic programs with unparalleled efficiency. With <strong class="text-primary font-semibold">30+ years of Fortune 500 experience</strong>, our dedicated experts transform ideas into market-defining realities, enabling organizations to achieve strategic goals and drive sustainable growth.
          </p>
          <a href="/our-leadership" class="inline-block bg-primary text-white px-6 py-3 rounded-lg font-medium hover:bg-primary/90 transition-colors">
            Meet Our Leadership
          </a>
        </div>
      </div>
    </section>

    {/* Testimonials Section (Background: Gray-100) */}
    {/* CHANGE: Changed background to bg-gray-100 for emphasis */}
    <section class="py-20 bg-gray-100">
        <div class="container mx-auto px-4">
             {/* CHANGE: Increased bottom margin */}
            <h2 class="text-3xl font-bold text-center mb-16">What Our Clients Say</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
                {testimonials.map((testimonial) => (
                    /* CHANGE: Testimonial card background now white for contrast */
                    <div class="bg-white p-8 rounded-lg shadow-lg border border-gray-200">
                        <blockquote class="text-lg text-gray-700 italic border-l-4 border-primary pl-4 mb-6"> {/* Increased margin bottom */}
                            "{testimonial.quote}"
                        </blockquote>
                        <p class="text-right text-gray-600 font-medium">
                            - {testimonial.name}, <span class="block text-sm text-gray-500">{testimonial.title}</span>
                        </p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    {/* Call to Action (Background: Primary) */}
    <section class="py-20 bg-primary"> {/* Explicitly set bg-primary */}
      <div class="container mx-auto px-4">
        <div class="text-white p-8 text-center"> {/* Removed inner rounded-lg and padding from here */}
          <h2 class="text-3xl font-bold mb-4">Ready to Transform Your Business?</h2>
          <p class="text-xl mb-8 max-w-2xl mx-auto"> {/* Added max-width */}
            Contact us today to discuss how we can help you achieve your goals.
          </p>
          <a href="/contact" class="inline-block bg-white text-primary px-8 py-4 rounded-lg font-medium hover:bg-gray-100 transition-colors">
            Get Started
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

{/* Logo scroll animation CSS (Unchanged) */}
<style is:global>
  @keyframes scroll {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); }
  }
  .animate-scroll { animation: scroll 45s linear infinite; }
  .logo-scroller:hover .animate-scroll { animation-play-state: paused; }
  @media (prefers-reduced-motion: reduce) { .animate-scroll { animation: none; } }
</style>