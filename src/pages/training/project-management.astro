---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

---

<Layout title="Project Management Training - SP Consulting">
  <Navigation />
  
  <main class="pt-20">
    <section class="bg-primary text-white py-20">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Project Management Training</h1>
        <p class="text-xl">Master the art and science of project management.</p>
      </div>
    </section>

    <section class="py-20">
      <div class="container mx-auto px-4 max-w-4xl">
        <div class="space-y-16">
          <div>
            <h2 class="text-3xl font-bold mb-6">Training Programs</h2>
            <div class="space-y-8">
              <div class="bg-white p-8 rounded-lg shadow-lg">
                <h3 class="text-2xl font-bold mb-4">Project Management Essentials</h3>
                <p class="text-gray-600 mb-6">
                  Core project management concepts and methodologies.
                </p>
                <ul class="space-y-3 text-gray-600 mb-6">
                  <li>• Project planning and scheduling</li>
                  <li>• Risk management</li>
                  <li>• Team leadership</li>
                  <li>• Stakeholder communication</li>
                </ul>
                <p class="text-sm text-gray-500">Duration: 3 days</p>
              </div>

              <div class="bg-white p-8 rounded-lg shadow-lg">
                <h3 class="text-2xl font-bold mb-4">Agile Project Management</h3>
                <p class="text-gray-600 mb-6">
                  Modern agile methodologies and practices.
                </p>
                <ul class="space-y-3 text-gray-600 mb-6">
                  <li>• Scrum and Kanban</li>
                  <li>• Sprint planning and execution</li>
                  <li>• Agile estimation techniques</li>
                  <li>• Continuous improvement</li>
                </ul>
                <p class="text-sm text-gray-500">Duration: 4 days</p>
              </div>

              <div class="bg-white p-8 rounded-lg shadow-lg">
                <h3 class="text-2xl font-bold mb-4">Advanced Project Management</h3>
                <p class="text-gray-600 mb-6">
                  Complex project management and portfolio management.
                </p>
                <ul class="space-y-3 text-gray-600 mb-6">
                  <li>• Program management</li>
                  <li>• Resource optimization</li>
                  <li>• Project recovery</li>
                  <li>• Strategic alignment</li>
                </ul>
                <p class="text-sm text-gray-500">Duration: 5 days</p>
              </div>
            </div>
          </div>

          <div class="text-center">
            <a
              href="/contact"
              class="inline-block bg-primary text-white px-8 py-4 rounded-lg font-medium hover:bg-primary/90 transition-colors"
            >
              Register for Training
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>