---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

---

<Layout title="Case Studies - SP Consulting">
  <Navigation />
  
  <main class="pt-20">
    <section class="bg-primary text-white py-20">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Case Studies</h1>
        <p class="text-xl">Real-world examples of our successful client engagements.</p>
      </div>
    </section>

    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold mb-4">Product Management Success Stories</h2>
            <p class="text-gray-600 mb-6">
              Discover how we helped organizations transform their product development processes.
            </p>
            <a href="/case-studies/product-management" class="text-primary font-medium hover:underline">
              View Case Studies →
            </a>
          </div>

          <div class="bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold mb-4">Project Management Excellence</h2>
            <p class="text-gray-600 mb-6">
              Learn about successful project deliveries and transformations.
            </p>
            <a href="/case-studies/project-management" class="text-primary font-medium hover:underline">
              View Case Studies →
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>